{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "ES2022"
      // "dom.iterable",
      // "esnext",
      // "ESNext.Array"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "incremental": true,
    "jsx": "react-jsx",
    "declaration": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "noFallthroughCasesInSwitch": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck":true,
    "removeComments": true,
    "sourceMap": false,
    "importHelpers": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules", 
    "**/.*/"
  ]
}
