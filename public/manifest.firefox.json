{
    "name": "Dynamics SideKick",
    "description": "Enhance your Dynamics 365 experience with Dynamics SideKick â€” a custom side panel.",
    "version": "{PACKAGE_VERSION}",
    "manifest_version": 3,
    "background": {
        "scripts": [
            "/static/js/background.js"
        ]
    },
    "action": {
        "default_popup": "options.html",
        "default_title": "Options"
    },
    "icons": {
        "16": "icons/muiwand.png",
        "48": "icons/muiwand.png",
        "128": "icons/muiwand.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "/static/js/{FILE_NAME}.content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "/static/js/{FILE_NAME}.js",
                "/icons/*"
            ],
            "matches": [
                "*://*/*",
                "*://*/*"
            ]
        }
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "permissions": [
        "storage",
        "declarativeNetRequest"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "sofiane.guezzar.dynamics.sidekick@gmail.com"
        }
    }
}