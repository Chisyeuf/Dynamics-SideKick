{
    "short_name": "Mui Dev Tools",
    "name": "Mui Dynamics Dev Tools",
    "description": "",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "options.html",
        "default_title": "Options"
    },
    "icons": {
        "16": "icons/favicon.ico",
        "48": "icons/favicon.ico",
        "128": "icons/favicon.ico"
    },
    "content_scripts": [
        {
            "matches": ["https://*.dynamics.com/*"],
            "js": ["/static/js/content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["/static/js/main.js", "/icons/*"],
            "matches": ["https://*.dynamics.com/*"]
        }
    ],
    "permissions": [
        "storage"
    ],
    "start_url": ".",
    "display": "standalone",
    "theme_color": "#000000",
    "background_color": "#ffffff"
}
